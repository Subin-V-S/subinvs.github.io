function loadQuestion() {
  document.getElementById("question").innerText = `Question ${index + 1}`;
  document.getElementById("text").innerText = quiz[index].q;
  document.getElementById("message").innerText = "";

  const optionsDiv = document.getElementById("options");
  optionsDiv.innerHTML = "";

  quiz[index].options.forEach(opt => {
    const btn = document.createElement("button");
    btn.innerText = opt.text;
    btn.className = opt.correct ? "correct" : "option";

    btn.onclick = () => {
      if (opt.correct) {
        startHearts();
        index++;
        if (index < quiz.length) {
          loadQuestion();
        } else {
          showValentine();
        }
      } else {
        document.getElementById("message").innerText = opt.msg;
      }
    };

    optionsDiv.appendChild(btn);
  });
}

function showValentine() {
  document.getElementById("card").innerHTML = `
    <h1>Boobooâ€¦ ğŸ’–</h1>
    <p>After all thisâ€¦ will you be my Valentine? ğŸ¥°</p>
    <button class="correct" onclick="yes()">YES â¤ï¸</button>
    <button class="option" id="noBtn" onmouseover="moveNo()">NO ğŸ˜…</button>
  `;
}

function yes() {
  document.getElementById("card").innerHTML = `
